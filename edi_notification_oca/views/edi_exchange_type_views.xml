<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="edi_exchange_type_view_form" model="ir.ui.view">
        <field name="model">edi.exchange.type</field>
        <field name="inherit_id" ref="edi_oca.edi_exchange_type_view_form" />
        <field name="arch" type="xml">
            <group name="config" position="inside">
                <field name="send_notification_on_error" />
            </group>
            <notebook position="inside">
                <page
                    name="notification_config"
                    string="Notification"
                    attrs="{'invisible': [('send_notification_on_error', 'in', (False, None))]}"
                >
                    <group name="notification_config">
                        <field
                            name="notification_groups_ids"
                            widget="many2many_tags"
                            attrs="{'invisible': [('send_notification_on_error', 'in', (False, None))]}"
                        />
                        <field
                            name="notification_users_ids"
                            widget="many2many_tags"
                            attrs="{'invisible': [('send_notification_on_error', 'in', (False, None))]}"
                        />
                    </group>
                </page>
            </notebook>
        </field>
    </record>
</odoo>
